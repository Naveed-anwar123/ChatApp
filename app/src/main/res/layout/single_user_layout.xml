<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/urimage"
        android:layout_width="66dp"
        android:layout_height="66dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="26dp"
        android:layout_marginTop="25dp"
        android:src="@drawable/crib" />

    <TextView
        android:id="@+id/urname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/urimage"
        android:layout_marginStart="31dp"
        android:layout_toEndOf="@+id/urimage"
        android:text="Display name"
        android:textColor="@color/cast_expanded_controller_background_color"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/urstatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/urimage"
        android:layout_alignStart="@+id/urname"
        android:text="Your Status"
        android:textSize="14sp" />

</RelativeLayout>